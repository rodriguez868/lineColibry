@model IEnumerable<colibry.Models.Ordenes>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<div class="page-content">
    <div class="container-fluid" id="listado">

        <!-- Listado de usuarios -->

        <div class="w-100 d-flex justify-content-between align-items-center py-4">
            <div class="col-md-8">
                <h4 class="page-title">Ordenes</h4>
                <ol class="breadcrumb m-0  p-0 bg-transparent">
                    <li class="breadcrumb-item"><a href="#">Inicio</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Ordenes</li>
                </ol>
            </div>

            @if (@Context.Session != null)
            {
                if (!@Context.Session["Id"].Equals(1))
                {
                    <a class="btn btn-primary dropdown-toggle" href="~/Admin/Orden">
                        <i class="mdi mdi-plus mr-2"></i>Orden
                    </a>
                }
            }

        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <table class="table table-striped rounded overflow-hidden">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Fecha Visita</th>
                                    <th>Dirección</th>
                                    <th>Sitio</th>
                                    <th>Latitud</th>
                                    <th>Latitud</th>
                                    <th>Creado por</th>
                                    <th>Estado</th>
                                    <th width="20%" align="center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Fecha.Split(' ')[0]</td>
                                    <td>@item.Direccion</td>
                                    <td>@item.Sitio</td>
                                    <td>@item.Latitud</td>
                                    <td>@item.Longitud</td>
                                    <td class="text-capitalize">
                                        @item.nm_usuario
                                    </td>
                                    <td class="text-capitalize">
                                        @item.nm_estado
                                    </td>
                                    <td width="20%" align="center">
                                        <a href="/Admin/Orden/@item.Id" class = "btn btn-link text-primary p-1"><i class="fas fa-edit"></i></a>
                                        <a href="/Admin/BorrarOrden/@item.Id" class = "btn btn-link text-danger p-1"  ><i class="fas fa-trash-alt"></i></a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 

