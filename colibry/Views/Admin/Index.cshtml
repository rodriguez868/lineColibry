
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="page-title-box">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h6 class="page-title">Dashboard</h6>
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item active">Bienvenido a LineColibry</li>
                    </ol>
                </div>
            </div>
        </div>
        <div class=" w-100 d-flex justify-content-between align-items-start">
            <div class="w-20 mr-1" style="width:35%">
                <div class="">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title mb-4">Reporte de avances</h4>

                            <div class="cleafix d-flex justify-content-between align-items-center">
                                <p class="float-start">
                                    Total de Reportes:
                                </p>
                                <h5 class="font-18 text-end">
                                    @ViewBag.Total
                                </h5>
                            </div>

                            <div class="mt-4">
                                <table class="table mb-0">
                                    <tbody>
                                        <tr>
                                            <td><span class="badge bg-primary">Ab</span></td>
                                            <td>Abiertos</td>
                                            <td class="textend"> @ViewBag.Abiertos %</td>
                                        </tr>
                                        <tr>
                                            <td><span class="badge bg-success">Ce</span></td>
                                            <td>Cerrados</td>
                                            <td class="textend">@ViewBag.Cerrados %</td>
                                        </tr>
                                        <tr>
                                            <td><span class="badge bg-warning">Re</span></td>
                                            <td>Rechazado</td>
                                            <td class="textend">@ViewBag.Rechazados %</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="w-80 mx-1 d-flex justify-content-around align-items-start flex-wrap">
                <div class="card-stat">
                    <div class="card mini-stat bg-primary text-white">
                        <div class="card-body">
                            <div class="mb-2">
                                <h5 class="font-size-16 text-uppercase mt-0 text-white-50">Ordenes Nuevas</h5>
                                <h4 class="fw-medium font-size-24">
                                    @ViewBag.Nuevas
                                </h4>
                            </div>
                            <div class="pt-2">
                                <div class="float-end">
                                    <a href="#" class="text-white-50"><i class="mdi mdi-arrow-right h5"></i></a>
                                </div>
                                <p class="text-white-50 mb-0 mt-1">Detalles</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-stat">
                    <div class="card mini-stat bg-primary text-white">
                        <div class="card-body">
                            <div class="mb-2">
                                <h5 class="font-size-16 text-uppercase mt-0 text-white-50">Ordenes Asignadas</h5>
                                <h4 class="fw-medium font-size-24">
                                    @ViewBag.Asignados
                                </h4>
                            </div>
                            <div class="pt-2">
                                <div class="float-end">
                                    <a href="#" class="text-white-50"><i class="mdi mdi-arrow-right h5"></i></a>
                                </div>
                                <p class="text-white-50 mb-0 mt-1">Detalles</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-stat">
                    <div class="card mini-stat bg-warning text-white">
                        <div class="card-body">
                            <div class="mb-2">
                                <h5 class="font-size-16 text-uppercase mt-0 text-white-50">En proceso</h5>
                                <h4 class="fw-medium font-size-24">
                                    @ViewBag.Enproceso
                                </h4>
                            </div>
                            <div class="pt-2">
                                <div class="float-end">
                                    <a href="#" class="text-white-50"><i class="mdi mdi-arrow-right h5"></i></a>
                                </div>
                                <p class="text-white-50 mb-0 mt-1">Detalles</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-stat">
                    <div class="card mini-stat bg-danger text-white">
                        <div class="card-body">
                            <div class="mb-2">
                                <h5 class="font-size-16 text-uppercase mt-0 text-white-50">Ordenes Rechazadas</h5>
                                <h4 class="fw-medium font-size-24">
                                    @ViewBag.Rechazado
                                </h4>
                            </div>
                            <div class="pt-2">
                                <div class="float-end">
                                    <a href="#" class="text-white-50"><i class="mdi mdi-arrow-right h5"></i></a>
                                </div>
                                <p class="text-white-50 mb-0 mt-1">Detalles</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-stat">
                    <div class="card mini-stat bg-success text-white">
                        <div class="card-body">
                            <div class="mb-2">
                                <h5 class="font-size-16 text-uppercase mt-0 text-white-50">Ordenes Finalizadas</h5>
                                <h4 class="fw-medium font-size-24">
                                    @ViewBag.Finalizados
                                </h4>
                            </div>
                            <div class="pt-2">
                                <div class="float-end">
                                    <a href="#" class="text-white-50"><i class="mdi mdi-arrow-right h5"></i></a>
                                </div>
                                <p class="text-white-50 mb-0 mt-1">Detalles</p>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
